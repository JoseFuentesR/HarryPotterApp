<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/txtimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo2"
        android:scaleType="centerCrop"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/txtperfil"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/harry"
        android:scaleType="centerCrop"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="80dp"

        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Potter"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"

        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/fondo_card"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="90dp"
        android:layout_marginBottom="34dp">


        <TextView
            android:id="@+id/txtspecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hemafroditar"
            android:textSize="25sp"


            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txtgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="masculino"

            android:textSize="25sp"
            android:layout_below="@+id/txtspecies"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txthouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="house"
            android:layout_marginLeft="55dp"
            android:textSize="25sp"
            android:layout_below="@+id/txtgender"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txtbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dateofbrind"
            android:layout_below="@id/txthouse"
            android:textSize="25sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txtpatronus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="patronus"
            android:textSize="25sp"
            android:layout_below="@id/txtbirth"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txthoward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="howard"
            android:textSize="25sp"
            android:layout_below="@id/txtpatronus"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txtactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="actor"
            android:textSize="25sp"
            android:layout_below="@+id/txthoward"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/txtalive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alive"
            android:textSize="25sp"
            android:layout_below="@id/txtactor"
            android:textColor="#000000"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="atras"

            android:paddingHorizontal="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="salir"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>